<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.depository_manage.mapper.BearingInventoryMapper">
    <resultMap id="bearingMap" type="com.depository_manage.entity.BearingInventory">
        <result property="boxNumber" column="box_number"/>
        <result property="productId" column="product_id"/>
        <result property="quantityInStock" column="quantity_in_stock"/>
    </resultMap>

    <insert id="insertBearingInventory" parameterType="com.depository_manage.entity.BearingInventory">
        INSERT INTO bearing_inventory (box_number, product_id, quantity_in_stock)
        VALUES (#{boxNumber}, #{productId}, #{quantityInStock})
    </insert>
    <select id="selectBearingInventory" parameterType="string" resultMap="bearingMap">
        SELECT * FROM bearing_inventory WHERE box_number = #{boxNumber}
    </select>
    <update id="updateBearingInventory">
        UPDATE bearing_inventory
        SET quantity_in_stock = #{quantityInStock}
        WHERE box_number = #{boxNumber} AND product_id = #{productId}
    </update>

    <delete id="deleteBearingInventory">
        DELETE FROM bearing_inventory
        WHERE box_number = #{boxNumber}
    </delete>

</mapper>
