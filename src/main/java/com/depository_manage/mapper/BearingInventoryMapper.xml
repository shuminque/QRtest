<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.depository_manage.mapper.BearingInventoryMapper">
    <resultMap id="bearingMap" type="com.depository_manage.entity.BearingInventory">
        <result property="boxText" column="box_text"/>
        <result property="boxNumber" column="box_number"/>
        <result property="quantityInStock" column="quantity_in_stock"/>
        <result property="operationType" column="transaction_type"/>
        <result property="depositoryId" column="depository_id"/> <!-- 新增字段映射 -->
    </resultMap>


    <insert id="insertBearingInventory" parameterType="com.depository_manage.entity.BearingInventory">
        INSERT INTO bearing_inventory (box_text, box_number, quantity_in_stock, depository_id)
        VALUES (#{boxText}, #{boxNumber}, #{quantityInStock}, #{depositoryId})
    </insert>
    <select id="selectBearingInventory" parameterType="string" resultMap="bearingMap">
        SELECT * FROM bearing_inventory WHERE box_text = #{boxText}
    </select>
    <update id="updateBearingInventory">
        UPDATE bearing_inventory
        SET quantity_in_stock = #{quantityInStock}
        WHERE box_text = #{boxText}
    </update>

    <delete id="deleteBearingInventory">
        DELETE FROM bearing_inventory
        WHERE box_text = #{boxText}
    </delete>

    <select id="countOperationRecords" resultType="int">
        SELECT COUNT(*)
        FROM bearing_records
        WHERE box_text = #{boxText} AND box_number = #{boxNumber} AND transaction_type = #{operationType}
    </select>

</mapper>
